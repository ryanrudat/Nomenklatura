import Foundation

enum Secrets {
    /// Your Anthropic API key - get one at console.anthropic.com
    static let anthropicAPIKey = "YOUR_API_KEY_HERE"

    /// Whether AI features are enabled (set to true once you add your key)
    static var isAIEnabled: Bool {
        anthropicAPIKey != "YOUR_API_KEY_HERE" && !anthropicAPIKey.isEmpty
    }
}
