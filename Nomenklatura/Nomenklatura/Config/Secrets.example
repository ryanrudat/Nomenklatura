import Foundation

/// API configuration - thread-safe constants accessible from any actor
enum Secrets: Sendable {
    // MARK: - Production (Proxy)

    /// Your Render proxy URL - set this after deploying the proxy
    static let proxyURL = "https://YOUR-RENDER-APP.onrender.com/api/messages"

    /// Set to false to use the proxy (production), true for direct API access (local dev)
    static let useDirectAPI = true

    // MARK: - Development (Direct API)

    /// Your Anthropic API key - only used when useDirectAPI = true
    static let anthropicAPIKey = "YOUR_API_KEY_HERE"

    /// Whether AI features are enabled
    static let isAIEnabled: Bool = {
        if useDirectAPI {
            return anthropicAPIKey != "YOUR_API_KEY_HERE" && !anthropicAPIKey.isEmpty
        } else {
            return proxyURL != "https://YOUR-RENDER-APP.onrender.com/api/messages"
        }
    }()
}
